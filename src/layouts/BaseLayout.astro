<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    let today = new Date();
    let year = today.getFullYear();
    let month = String(today.getMonth() + 1).padStart(2, "0");
    let day = String(today.getDate()).padStart(2, "0");
    let imageKey = `image-${year}-${month}-${day}`;
    let descriptionKey = `description-${year}-${month}-${day}`;
    let artistNameKey = `artistName-${year}-${month}-${day}`;
    let artistLinkKey = `artistLink-${year}-${month}-${day}`;

    // Check if the image URL for today is already stored
    const storedImageUrl = localStorage.getItem(imageKey);

    if (!storedImageUrl) {
      const url = `https://api.wikimedia.org/feed/v1/wikipedia/en/featured/${year}/${month}/${day}`;

      fetch(url)
        .then((response) => response.json())
        .then((data) => {
          console.log(data);
          if (data.image.thumbnail) {
            const imageUrl = data.image.thumbnail.source;
            const imageDescription = data.image.description.text;
            const artistName = data.image.artist.text;
            const artistLink = data.image.artist.user_page;
            localStorage.setItem(imageKey, imageUrl); // Store the image URL with today's date as key
            localStorage.setItem(descriptionKey, imageDescription);
            localStorage.setItem(artistNameKey, artistName);
            localStorage.setItem(artistLinkKey, artistLink);
            document.getElementById("potd").src = imageUrl;
            document.getElementById("potd").alt = imageDescription;
            document.getElementById("potd_caption").innerHTML = `
              ${imageDescription} Uploaded by <a href=${artistLink}>${artistName}</a>`;
          }
        })
        .catch((error) => {
          console.error("Failed to fetch Wikimedia Picture of the Day:", error);
          // Note: No need to change the src here as it's already set to a fallback in the HTML
        });
    } else {
      // Use the stored image URL
      document.getElementById("potd").src = storedImageUrl;

      const storedDescription = localStorage.getItem(descriptionKey);
      const storedArtistName = localStorage.getItem(artistNameKey);
      const storedArtistLink = localStorage.getItem(artistLinkKey);

      document.getElementById("potd").alt = storedDescription;
      document.getElementById("potd_caption").innerHTML = `
              ${storedDescription} Uploaded by <a href=${storedArtistLink}>${storedArtistName}</a>`;
    }
  });
</script>
